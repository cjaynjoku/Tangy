@page "/LearnBlazor/bindprop"
<h2 class="text-sucess">Individual Product</h2>
<div class="row">
    <div class="col-6 border" p-2>
        <h3 class="text-primary">Product Playground</h3><hr />
        <div>
            <p><label for="button-status">Active</label> <input type="checkbox" @bind-value="@Product.IsActive" checked="@(Product.IsActive?"checked":null)" /></p>
        </div>
        <div>
            Price: <input type="number" @bind-value="@Product.Price" @bind-value:event="oninput" /><br />
            @*
                Price: <input type="number" @bind="@Product.Price" @bind:event="oninput" />*@
        </div>
        <div>
            Product Properties:
            <select @bind="selectedProp">
                @foreach (var prod in Product.ProductProperties)
                {
                    <option value="@prod.Key">@prod.Key</option>
                }
            </select>
        </div>
    </div>

    <div class="col-6 border" p-2>
        <h3 class="text-primary">Product Summary</h3><hr />
        Name: @Product.Name<br />
        Active: @Product.IsActive<br />
        Price: @Product.Price<br />

        <p>This product is: @(Product.IsActive?"IsActive":"Inactive") </p><br />
        Property Selected : @selectedProp <br />
        @if (!String.IsNullOrWhiteSpace(@selectedProp))
        {
            <p> Property Value : @Product.ProductProperties.FirstOrDefault(v => v.Key == @selectedProp).Value</p>
        }
        <br />
    </div>
    <div class="col-12 pt-4">

        <h2 class="text-success">Product Table</h2>
        <table class="table table-striped">
            <tbody>
                @foreach   (var prod in Products)
                
                
                {
                    <tr>
                        <td>
                            <input type="text" @bind-value="prod.Name" @bind-value:event="oninput"   />
                        </td>
                        <td>
                            <input type="number" @bind-value="@prod.Price" @bind-value:event="oninput" />
                        </td>
                        <td>
                            <input type="checkbox" @bind-value="@prod.IsActive" checked="@(prod.IsActive?"checked":null)" />
                        </td>

                    </tr>
                }
            </tbody>

        </table>
        <br /><br />
        <h2>Product Summary</h2>


        @foreach (var prod in Products)
        {

            <p>@prod.Name [@prod.Price] is @(prod.IsActive?"Active":"inActive")</p>

        }

    </div>
</div>




